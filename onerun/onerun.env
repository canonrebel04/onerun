#!/bin/bash

# Security & Safety Configuration
export SAFE_WARN=0      # 0 to show warnings, 1 to suppress
export FORCE=0          # 0 to prompt, 1 to separate
export DRY_RUN=0        # 1 to disable persistence
export SKIP_BANNER=0    # 1 to skip banner

# Paths
export ONERUN_ROOT="$SCRIPT_DIR"
export LOG_DIR="${ONERUN_ROOT}/logs"
export BACKUP_ROOT="${ONERUN_ROOT}/backups"

# Variables
# Use single quotes for awk to prevent early expansion if any
export USERS=$(awk -F':' '{ print $1 }' /etc/passwd)
export DATE=$(date +"%D")

# Data / Lists
if [[ -f "${ONERUN_ROOT}/data/counter" ]]; then
    export RUN_COUNT=$(cat "${ONERUN_ROOT}/data/counter")
else
    export RUN_COUNT=0
fi

if [[ -f "${ONERUN_ROOT}/data/potentially_malicious.txt" ]]; then
    export POTENTIALLY_MALICIOUS=($(cat "${ONERUN_ROOT}/data/potentially_malicious.txt"))
fi

if [[ -f "${ONERUN_ROOT}/data/common_services.txt" ]]; then
    export SERVICE_DETECTION=($(cat "${ONERUN_ROOT}/data/common_services.txt"))
fi

# Ports & Services
export HTTP_PORTS=(80 443)
export EMAIL_PORTS=(25 587 465 110 995 143)
export DNS_PORTS=(53)

export IMPORTANT_SERVICES=("nginx" "ufw" "apache" "apache2" "mysql" "httpd" "dovecot" "postfix" "sendmail" "exim" "courier" "openldap" "firewalld" "mariadb" "fail2ban" "ssh" "docker" "telnet" "bind")

# Colors
export RED='\033[0;31m'
export GREEN='\033[0;32m'
export YELLOW='\033[0;33m'
export BLUE='\033[0;34m'
export MAGENTA='\033[0;35m'
export CYAN='\033[0;36m'
export WHITE='\033[0;37m'
export NC='\033[0m'
